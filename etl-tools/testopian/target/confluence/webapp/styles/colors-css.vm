/*
    Colors for Confluence (included for all themes by default).
*/
h1, h2, h3, h4, h5, h6,
.wiki-content h1,
.wiki-content h2,
.wiki-content h3,
.wiki-content h4,
.wiki-content h5,
.wiki-content h6,
.pagetitle,
.steptitle,
.substeptitle,
.formtitle,
th.confluenceTh,
table.confluenceTable th.confluenceTh,
table.admin th,
.form-element-large,
.form-element-small,
#com-atlassian-confluence .mce_h1 span.mceText,
#com-atlassian-confluence .mce_h2 span.mceText,
#com-atlassian-confluence .mce_h3 span.mceText,
#com-atlassian-confluence .mce_h4 span.mceText,
#com-atlassian-confluence .mce_h5 span.mceText,
#com-atlassian-confluence .mce_h6 span.mceText {
    color: $colorScheme.headingTextColor;
}

.wiki-content h1,
.wiki-content h2 {
 	border-bottom-color: $colorScheme.borderColor;
}

.wiki-content-preview {
    border-left-color: $colorScheme.borderColor;
    border-right-color: $colorScheme.borderColor;
}

.pageSectionHeader {
    border-bottom-color: $colorScheme.navBackgroundColor;
}

.panel {
    border-color: $colorScheme.borderColor;
}

.panelHeader,
.menuheading,
.pageheader,
.sectionbottom {
    border-bottom-color: $colorScheme.borderColor;
}

.topRow {
    border-top-color: $colorScheme.borderColor;
}

.tabletitle, .pageSectionHeader {
	border-bottom-color: $colorScheme.borderColor;
}

a:link,
a:visited,
a:focus,
a:hover,
a:active,
#default-labels-header a.add,
a.blogHeading,
.more-comments a {
	color: $colorScheme.linkColor;
}

/* @aui-override: tab colour, review after https://studio.atlassian.com/browse/AJS-557 is resolved */
.aui-tabs ul.tabs-menu li.menu-item a {
	color: $colorScheme.linkColor;
}
/* @end */

h1 a:link,
h1 a:visited,
h1 a:focus,
h1 a:hover,
h1 a:active {
    color: $colorScheme.linkColor;
    border-bottom-color: $colorScheme.headingTextColor;
}

.spacenametitle-printable,
.spacenametitle-printable a,
.spacenametitle-printable a:visited {
    color: $colorScheme.spaceNameColor;
}

.tableview th {
    color: $colorScheme.headingTextColor;
    border-bottom-color: $colorScheme.borderColor;
}

blockquote {
    border-left-color: $colorScheme.borderColor;
}

.navBackgroundBox {
    background: $colorScheme.navBackgroundColor;
}

.previewBoxTop,
.previewContent,
.previewBoxBottom,
.functionbox {
    border-color: $colorScheme.borderColor;
}

.smalltext-blue {
    color: $colorScheme.borderColor;
}

.tabnav,
.comment .tabnav,
ul.tabnav {
    border-bottom-color: $colorScheme.navBackgroundColor;
}

.tabnav .tabs a {
    border-color: $colorScheme.navBackgroundColor;
    background: $colorScheme.navBackgroundColor;
}

.tabnav .tabs a:link,
.tabnav .tabs a:visited {
    color: $colorScheme.navTextColor;
}
.tabnav .tabs a:hover {
    color: $colorScheme.navSelectedTextColor;
    background: $colorScheme.navSelectedBackgroundColor;
    border-color: $colorScheme.navSelectedBackgroundColor;
}

#squaretab a {
    border-color: $colorScheme.navBackgroundColor;
}

#squaretab a:link,
#squaretab a:visited {
    background-color: $colorScheme.navBackgroundColor;
}

#squaretab a:hover {
    color: $colorScheme.navSelectedTextColor;
    background-color: $colorScheme.navSelectedBackgroundColor;
    border-color: $colorScheme.navSelectedBackgroundColor;
}

table.blogcalendar {
    border-color: $colorScheme.borderColor;
}

.blogcalendar th.calendarhead,
a.calendarhead,
a.calendarhead:link,
a.calendarhead:visited,
a.calendarhead:hover {
    background-color: $colorScheme.navBackgroundColor;
    color: $colorScheme.navTextColor;
}

.searchGroupHeading {
    background-color: $colorScheme.navBackgroundColor;
    color: $colorScheme.navTextColor;
}

.permissionTab {
    background: $colorScheme.navBackgroundColor;
    color: $colorScheme.navTextColor;
}

.permissionSuperTab {
    background: $colorScheme.navSelectedBackgroundColor;
    color: $colorScheme.navSelectedTextColor;
}

/* styles for links in the top bar */
.topBar {
    background-color: $colorScheme.topBarColor;
}

.basicPanelContainer {
    border-color: $colorScheme.navBackgroundColor;
}

.greynavbar {
    border-top-color: $colorScheme.navBackgroundColor
}

div.license-personal {
   background-color: $colorScheme.topBarColor;
   color: $colorScheme.navTextColor;
}

div.license-personal a {
   color: $colorScheme.navTextColor;
}

#header {
    background-color: $colorScheme.topBarColor;
}
#header a,
\#breadcrumbs,
#header .ajs-menu-bar li.ajs-menu-item a.trigger {
    color: $colorScheme.breadcrumbsTextColor;
}
.breadcrumbs {
 	border-color: $colorScheme.borderColor;
}

#navigation, #tab-navigation {
    border-bottom-color: $colorScheme.navBackgroundColor;
}

#com-atlassian-confluence .aui-dd-parent .aui-dropdown .dropdown-item a,
.ajs-menu-bar li.ajs-menu-item .ajs-drop-down a {
    color: $colorScheme.menuItemTextColor;
}
#header .ajs-menu-bar li.ajs-menu-item .ajs-drop-down a {
    color: $colorScheme.topBarMenuItemTextColor;
}

#com-atlassian-confluence .aui-dd-parent a.perms-dropdown-trigger:hover,
#com-atlassian-confluence .aui-dd-parent a.perms-dropdown-trigger:focus,
#com-atlassian-confluence .aui-dd-parent .aui-dropdown .dropdown-item.active a,
.menu-section-list li.active a,
.menu-section-list li.active a:hover,
#navigation .ajs-menu-bar .ajs-button a:hover,
/* .ajs-menu-bar .ajs-menu-item.opened, */
.ajs-menu-bar .ajs-menu-item li.active a,
.aui-dd-parent .aui-dropdown li.active,
.aui-dd-parent .aui-dropdown li.active span,
.aui-dd-parent .aui-dropdown a:focus span,
.ajs-menu-bar .ajs-menu-item.opened .ajs-drop-down li.active a,
#navigation .ajs-menu-bar li.ajs-button a.active,
#header .ajs-menu-bar li.ajs-menu-item.opened .ajs-drop-down li.active a,
.ajs-content-hover .popup-follow a:hover {
    color: $colorScheme.menuItemSelectedTextColor;
    background-color: $colorScheme.menuItemSelectedBackgroundColor;
}
#header .ajs-menu-bar li.ajs-menu-item.opened,
#header .ajs-menu-bar li.ajs-menu-item.opened a.trigger {
    background-color: $colorScheme.topBarMenuSelectedBackgroundColor;
    border-color: $colorScheme.topBarMenuSelectedBackgroundColor;
}
.ajs-menu-bar .ajs-menu-item.opened a.trigger {
    background-color: $colorScheme.menuSelectedBackgroundColor;
}

#header .ajs-menu-bar .ajs-drop-down {
    border-color: $colorScheme.topBarColor;
}
#header .ajs-menu-bar .ajs-drop-down li.separator {
    border-top-color: $colorScheme.topBarColor;
}

.tab-navigation .tab a {
    background-color: $colorScheme.navBackgroundColor;
    border: 1px solid $colorScheme.navBackgroundColor;
    color: $colorScheme.navTextColor;
}
.tab-navigation .tab a:hover {
    color: $colorScheme.navSelectedTextColor;
    background-color: $colorScheme.navSelectedBackgroundColor;
    border-bottom-color: $colorScheme.navSelectedBackgroundColor;
}

.tabletitle, .heading-text-color {
    color: $colorScheme.headingTextColor;
}

ol.autocompleter li.focused {
	background: $colorScheme.menuSelectedBackgroundColor;
	color: $colorScheme.menuItemSelectedTextColor;
}

/* End colour styles for Confluence */
